def mediap(vet, n):
    s = 0
    cp = 0
    pos = 0
    while pos < n:
        if vet[pos]%2 == 0:
            cp = cp + 1
            s = s + vet[pos]
            pos = pos + 1
    return s/cp
def main():
    vet = [1, 2, 3, 4, 5, 6]
    n = 4 
    valor = mediap(vet, n)
    print(valor)

if __name__ == '__main__':
    main()
